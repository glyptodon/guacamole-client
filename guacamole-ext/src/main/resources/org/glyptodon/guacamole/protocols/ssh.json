{
    "name"  : "ssh",
    "forms" : [

        {
            "name"  : "network",
            "fields" : [
                {
                    "name"  : "hostname",
                    "type"  : "TEXT"
                },
                {
                    "name"  : "port",
                    "type"  : "NUMERIC"
                }
            ]
        },

        {
            "name"  : "authentication",
            "fields" : [
                {
                    "name"  : "username",
                    "type"  : "USERNAME"
                },
                {
                    "name"  : "password",
                    "type"  : "PASSWORD"
                },
                {
                    "name"  : "private-key",
                    "type"  : "MULTILINE"
                },
                {
                    "name"  : "passphrase",
                    "type"  : "PASSWORD"
                }
            ]
        },

        {
            "name"  : "display",
            "fields" : [
                {
                    "name"  : "font-name",
                    "type"  : "TEXT"
                },
                {
                    "name"  : "font-size",
                    "type"  : "ENUM",
                    "options" : [ "", "8", "9", "10", "11", "12", "14", "18", "24", "30", "36", "48", "60", "72", "96" ]
                }
            ]
        },

        {
            "name"  : "sftp",
            "fields" : [
                {
                    "name"    : "enable-sftp",
                    "type"    : "BOOLEAN",
                    "options" : [ "true" ]
                }
            ]
        }

    ]
}